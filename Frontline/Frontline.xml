<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <!-- Main movable frame with black background -->
    <Frame name="FrontlineFrame" parent="UIParent" frameStrata="MEDIUM" hidden="false" movable="true" enableMouse="true">
        <Size x="800" y="650"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="UIParent"/>
        </Anchors>

        <!-- Background -->
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" setAllPoints="true">
                    <Color r="0" g="0" b="0" a="0.8"/>
                </Texture>
                
                <!-- Horizontal divider (header) -->
                <Texture parentKey="HeaderDivider">
                    <Size x="780" y="1"/>
                    <Anchors>
                        <Anchor point="TOP" y="-50"/>
                    </Anchors>
                    <Color r="1" g="1" b="1" a="0.5"/>
                </Texture>
                
                <!-- Vertical divider -->
                <Texture parentKey="VerticalDivider">
                    <Size x="1" y="580"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-200" y="10"/>
                    </Anchors>
                    <Color r="1" g="1" b="1" a="0.5"/>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <!-- Collapse Button -->
            <Button name="$parentCollapseButton" text="Collapse">
                <Size x="120" y="30"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-10"/>
                </Anchors>
                <NormalFont style="GameFontNormal"/>
                <HighlightFont style="GameFontHighlight"/>
                <NormalTexture parentKey="NormalTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.2" g="0.2" b="0.2" a="1"/>
                </NormalTexture>
                <HighlightTexture parentKey="HighlightTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.5" g="0.5" b="0.5" a="0.5"/>
                </HighlightTexture>
                <PushedTexture parentKey="PushedTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                </PushedTexture>
                <Scripts>
                    <OnClick>
                        Frontline.SwitchCollapse(true)
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Refresh Button -->
            <Button name="$parentRefreshButton" text="">
                <Size x="120" y="30"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-10" y="-10"/>
                </Anchors>
                <NormalFont style="GameFontNormal"/>
                <HighlightFont style="GameFontHighlight"/>
                <NormalTexture parentKey="NormalTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.2" g="0.2" b="0.2" a="1"/>
                </NormalTexture>
                <HighlightTexture parentKey="HighlightTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.5" g="0.5" b="0.5" a="0.5"/>
                </HighlightTexture>
                <PushedTexture parentKey="PushedTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                </PushedTexture>
                <Scripts>
                    <OnClick>
                        Frontline.UpdatePlayer()
                        Frontline.Request()
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Mode Button -->
            <Button name="$parentModeButton" text="">
                <Size x="120" y="30"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-140" y="-10"/>
                </Anchors>
                <NormalFont style="GameFontNormal"/>
                <HighlightFont style="GameFontHighlight"/>
                <NormalTexture parentKey="NormalTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.2" g="0.2" b="0.2" a="1"/>
                </NormalTexture>
                <HighlightTexture parentKey="HighlightTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.5" g="0.5" b="0.5" a="0.5"/>
                </HighlightTexture>
                <PushedTexture parentKey="PushedTexture" file="Interface/BUTTONS/WHITE8X8">
                    <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                </PushedTexture>
                <Scripts>
                    <OnClick>
                        Frontline.SwitchMode()
                        Frontline.UpdatePlayer()
                        Frontline.Request()
                    </OnClick>
                </Scripts>
            </Button>

            <ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size x="560" y="580"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="10" y="10"/>
                </Anchors>
                <ScrollChild>
                    <Frame name="$parentScrollChild">
                        <Size x="560" y="580"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <Frame name="$parentPlayerFrame">
                <Size x="180" y="180"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-10" y="-60"/>
                </Anchors>
            </Frame>

            <Frame name="$parentGroupFrame">
                <Size x="180" y="400"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-10" y="-240"/>
                </Anchors>

                <Frames>
                    <!-- Create Button -->
                    <Button name="$parentGroupButton" text="Create" hidden="false">
                        <Size x="175" y="30"/>
                        <Anchors>
                            <Anchor point="TOP" x="0" y="0"/>
                        </Anchors>
                        <NormalFont style="GameFontNormal"/>
                        <HighlightFont style="GameFontHighlight"/>
                        <NormalTexture parentKey="NormalTexture" file="Interface/BUTTONS/WHITE8X8">
                            <Color r="0.2" g="0.2" b="0.2" a="1"/>
                        </NormalTexture>
                        <HighlightTexture parentKey="HighlightTexture" file="Interface/BUTTONS/WHITE8X8">
                            <Color r="0.5" g="0.5" b="0.5" a="0.5"/>
                        </HighlightTexture>
                        <PushedTexture parentKey="PushedTexture" file="Interface/BUTTONS/WHITE8X8">
                            <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                        </PushedTexture>
                        <Scripts>
                            <OnClick>
                                Frontline.OnGroupButton()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
                        <Size x="150" y="360"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="4" y="-40"/>
                        </Anchors>
                        <ScrollChild>
                            <Frame name="$parentScrollChild">
                                <Size x="560" y="580"/>
                            </Frame>
                        </ScrollChild>
                    </ScrollFrame>

                </Frames>
            </Frame>
        </Frames>
        
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton")
            </OnLoad>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
                Frontline.SavePosition()
                <!-- FrontlineFrame:ClearAllPoints()
                FrontlineFrame:SetPoint("TOPLEFT", UIParent, "TOPLEFT") -->
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>